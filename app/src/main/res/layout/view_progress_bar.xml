<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_progress_bar_title"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Caption1.Regular"
        android:textColor="@color/gray_800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="음식 맛" />

    <ProgressBar
        android:id="@+id/pb_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="99dp"
        android:layout_height="7dp"
        android:layout_marginStart="7dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/layer_list_progress_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_progress_bar_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_progress_bar_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textAppearance="@style/TextAppearance.Caption2"
        android:textColor="@color/gray_800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pb_progress_bar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3.8점" />

</androidx.constraintlayout.widget.ConstraintLayout>