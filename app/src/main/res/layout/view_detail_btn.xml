<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gray_100_line_99_rect">

    <TextView
        android:id="@+id/tv_detail_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:layout_marginStart="@dimen/spacing12"
        android:textAppearance="@style/TextAppearance.Body2.SemiBold"
        android:textColor="@color/gray_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="메뉴 전체보기" />

    <ImageView
        android:id="@+id/iv_detail_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_chevron_gray_600_12"
        app:layout_constraintBottom_toBottomOf="@+id/tv_detail_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_detail_btn"
        app:layout_constraintTop_toTopOf="@+id/tv_detail_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>