<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TablingAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.TablingAndroid" parent="Base.Theme.TablingAndroid" />

    <!-- Button -->
    <style name="Widget.Material3.Button.Basic" parent="">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.FullButton.Basic" parent="Widget.Material3.Button.Basic">
        <item name="android:layout_height">@dimen/button_height_56</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.OutlinedButton.Basic" parent="Widget.Material3.Button.Basic">
        <item name="android:layout_height">@dimen/button_height_49</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.OutlinedButton.State" parent="Widget.Material3.Button.Basic">
        <item name="android:layout_height">@dimen/button_height_49</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <!-- BottomSheet -->
    <style name="Style.ShapeAppearance.BottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Style.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Style.ShapeAppearance.BottomSheetDialog</item>
    </style>

    <style name="Style.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Style.BottomSheet</item>
    </style>

    <!-- Chip -->
    <style name="Widget.Material3.Chip.Style" parent="">
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="android:checked">false</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Widget.Material3.Chip.Style.Radius99" parent="Widget.Material3.Chip.Style">
        <item name="chipCornerRadius">3dp</item>
    </style>

    <style name="Widget.Material3.Chip.Style.Radius99.Pick" parent="Widget.Material3.Chip.Style.Radius99">
        <item name="android:paddingVertical">7dp</item>
        <item name="chipStrokeColor">@color/gray_100</item>
        <item name="textStartPadding">12dp</item>
        <item name="textEndPadding">12dp</item>
        <item name="chipStrokeWidth">0.8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Caption1.SemiBold</item>
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="Style.Material3.Chip.Suggestion.Waiting" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipEndPadding">3dp</item>
        <item name="chipStartPadding">3dp</item>
        <item name="chipCornerRadius">99dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Caption1.Regular</item>
        <item name="android:textColor">@color/selector_popular_store_chip_text</item>
        <item name="chipStrokeColor">@color/selector_popular_store_chip_stroke</item>
        <item name="chipBackgroundColor">@color/selector_popular_store_chip_background</item>
    </style>

    <style name="Style.Material3.Chip.Suggestion.Waiting.Item" parent="Widget.Material3.Chip.Style">
        <item name="android:textAppearance">@style/TextAppearance.Caption2</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="android:checkable">false</item>
    </style>

    <style name="Widget.Material3.Chip.Style.Radius95" parent="Widget.Material3.Chip.Style">
        <item name="chipCornerRadius">15dp</item>
    </style>

    <style name="Widget.Material3.Chip.Style.Radius48" parent="Widget.Material3.Chip.Style">
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="chipMinHeight">0dp</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Caption1.SemiBold</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipCornerRadius">48dp</item>
    </style>

</resources>